# Laravel / PHP application standard .gitignore
/vendor/
/node_modules/
/public/build/
/public/hot
/public/storage
/storage/*.key
/storage/app/*
/storage/framework/*
/storage/logs/*
/storage/debugbar/*
/storage/framework/cache/data/*
/bootstrap/cache/*

# Keep placeholder .gitignore files so folders exist in repo
!storage/app/.gitignore
!storage/app/public/.gitignore
!storage/framework/.gitignore
!storage/framework/cache/.gitignore
!storage/framework/cache/data/.gitignore
!storage/framework/sessions/.gitignore
!storage/framework/testing/.gitignore
!storage/framework/views/.gitignore
!storage/logs/.gitignore
!bootstrap/cache/.gitignore

# Environment files
.env
.env.*
.env.*.local

# IDE and OS files
.idea/
.vscode/
*.iml
.DS_Store
Thumbs.db

# NPM/Yarn/Pnpm logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*

# PHPUnit
.phpunit.result.cache

# Laravel Octane/Swoole, if used
/storage/octane/

# Vite cache
/.vite/

# Composer binaries and cache
composer.phar

# Coverage and reports
coverage/
clover.xml

# Local databases (SQLite) - do not commit local dev DB files
/database/*.sqlite
/database/*.db

# Compiled Blade templates
/storage/framework/views/*.php

# Scaffolding directories not meant for VCS
/skeleton/
/tmp_skeleton/